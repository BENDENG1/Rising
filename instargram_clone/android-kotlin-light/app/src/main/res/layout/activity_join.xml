            android:layout_marginStart="15dp"
            android:text="@string/join_tv_password_title"
            android:textColor="@color/black"
            android:textSize="@dimen/join_tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_join_password_subTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:text="@string/join_tv_password_subTitle"
            android:textSize="@dimen/join_tv_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_join_password_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_join_password_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_join_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/join_stroke_gray_rectangle"
            android:hint="@string/login_edt_password"
