            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:text="@string/join_tv_password_subTitle"
            android:textSize="@dimen/join_tv_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_join_store_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_join_store_title" />

        <Button
            android:id="@+id/btn_join_store_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
