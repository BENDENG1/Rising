<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_home_story"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_home_story_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_btm_nav_profile_off_click"
        app:civ_border_color="@color/btn_story_red"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_story_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="내 스토리"
        android:textColor="@color/black"
        android:textSize="@dimen/home_tv_name_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_home_story_profile"
        app:layout_constraintStart_toStartOf="@+id/iv_home_story_profile"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_story_profile" />
</androidx.constraintlayout.widget.ConstraintLayout>