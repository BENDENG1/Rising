<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_home_find_hospital_bg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/home_find_hospital_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_home_find_hospital_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/view_home_find_hospital_bg"
        app:layout_constraintEnd_toEndOf="@+id/view_home_find_hospital_bg"
        app:layout_constraintStart_toStartOf="@+id/view_home_find_hospital_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_hospital_kids" />

    <TextView
        android:id="@+id/tv_home_find_hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/view_home_find_hospital_bg"
        app:layout_constraintStart_toStartOf="@+id/view_home_find_hospital_bg"
        app:layout_constraintTop_toBottomOf="@+id/view_home_find_hospital_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>